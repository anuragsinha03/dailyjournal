<%- include('partials/header'); -%>
<h1>Welcome to your Journal!</h1>
<p><%= textContent %></p>

<%posts.forEach(function(post){ %>
    <h1><%= post.title %></h1>
    <p>
        <%= post.content.substring(0, 100) + " ..." %>
        <a href="/posts/<%= post.title %>">Read More</a>
    </p>
<%});%>

<%- include('partials/footer'); -%>